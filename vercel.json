{
  "functions": {
    "api/og.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/blog/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|Twitterbot|LinkedInBot|WhatsApp|Slackbot|TelegramBot|Pinterest|Discordbot).*"
        }
      ],
      "destination": "/api/og?path=blog/:slug"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

